<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/lendo"/>

    <TextView
        android:id="@+id/tv_titulo_detalhes"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Livro"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tv_autor_detalhes"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Autor"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        />

        <ProgressBar
            android:id="@+id/editar_progeresso"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:progress="68"

            />

        <TextView
        android:id="@+id/tv_opiniao"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Anotacao/Comentarios"
        android:background="#ccc"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
        <EditText
            android:id="@+id/edopniao"
            android:layout_width="match_parent"
            android:hint="Comente..."
            android:layout_height="40dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:text="Enviar"
        android:onClick="comentar"
        android:layout_gravity="center"
        android:padding="5dp"
        />

    </LinearLayout>
</ScrollView>
